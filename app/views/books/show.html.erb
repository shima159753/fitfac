<div class="contents row">
  <div class="container">
    <h2>予約枠購入確認</h2>
    <%= form_with(model:@book,url: order_post_book_path(@book.post_id,@book.id), method: :post, local: true) do |f| %>

    <div class="form-group">
      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">開始時間</label>
        </div>
       <p class="book-confirmation"><%= @book.start_time.to_s(:datetime_jp) %></p>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">終了時間</label>
        </div>
       <p class="book-confirmation"><%= @book.end_time.to_s(:datetime_jp) %></p>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">料金</label>
        </div>
       <p class="book-confirmation"> ¥<%= @book.price.to_s(:delimited) %></p>
      </div>
    </div>


     <div class="form-group">
      <div class="field">
        <p>上記内容で予約します。クレジットカードの決済が行われます。</p>
        </div>
    </div>

      <div class="sign-up">
        <%= f.submit "予約をする",class:"sign-up-btn", data: {confirm: "予約枠を購入します。よろしいですか？"} %>        
      </div>
    

    <% end %>
  </div>
</div>
