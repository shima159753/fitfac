<div class="contents row">
  <div class="container">
    <h2>ログイン</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
   <div class="form-group">
    <div class='login-flash-message'>
      <%= flash[:alert] %>
    </div>
    </div>
     
    <div class="form-group">
      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email,  class:"input-default", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password,  class:"input-default",placeholder:"6文字以上の半角英数字",autocomplete: "off" %>
      </div>
    </div>

    <!--<div class="form-group">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me %><br />
          <%= f.check_box :remember_me %>
        </div>
    </div>
      <% end -%>-->

      <div class="login">
        <%= f.submit "ログイン" ,class:"login-btn"%>
      </div>
    <% end %>
  </div>
</div>
