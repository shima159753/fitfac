<div class="contents row">
  <div class="container">
<%= form_with  url: cards_path, id: 'charge-form', class: 'card-form',local: true do |f| %>
<div class="form-group">
<div class="field">
  <div class="Cardpage">
    <h1>カード登録</h1>
  </div><br>
  <div class='form-wrap'>
    <%= f.label :number, "【カード番号】" %> <span class="indispensable">必須</span>
    <%= f.text_field :number, class:"number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
  </div>
  <div class='form-wrap'>
    <%= f.label :cvc ,"【ＣＶＣ】" %>   <span class="indispensable">必須</span>
    <%= f.text_field :cvc, class:"cvc", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
  </div>
  <div class='form-wrap'>
  <br>
    <p>【有効期限】<span class="indispensable">必須</span></p>
    <div class='input-expiration-date-wrap'>  
      <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "exp_month" %>
      <p>月</p>
      <%= f.select :exp_year, 20..25, {include_blank: "---"}, class: "exp_year" %>
      <p>年</p>
    </div>
  </div>
   <div class="sign-up-card">
     <%= f.submit "登録する" ,class:"sign-up-btn" %>
   </div>
</div>
<% end %>
  </div>
</div>